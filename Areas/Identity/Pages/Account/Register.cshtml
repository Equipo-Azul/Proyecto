@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css">

<body>
<div class="container w-75 mt-5 rounded shadow">
    <div class="row align-items-stretch">
        <div class="col bgr d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded">

        </div>

        <!-- Icono -->
        <div class="col bg-white p-5 rounded-end">
            <div class="text-center">
                <img src="https://cdn.discordapp.com/attachments/1101400363459944491/1101528205875216446/icopage.png" width="95" alt="">
            </div>

            <h2 class="fw-bold text-center py-5 tfb">¡Se Parte de AniComics!</h2>

        <!-- Register -->
        <section>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="tf">Correo Electrónico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="tf">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" class="tf">Confirmar Contraseña</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrarse</button>
        </form>
        <p>

        </p>
        <p>© 2023 AniWeb. Todos los derechos reservados.</p>
    </section>
    </div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
