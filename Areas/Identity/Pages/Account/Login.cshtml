@page
@model LoginModel

@{
    ViewData["Title"] = "Log-In";
}

<link rel="stylesheet" href="~/css/login.css">
<link rel="shortcut icon" href="https://cdn.discordapp.com/attachments/1101400363459944491/1103101527947759676/ico.png">

<body>
<div class="container w-75 mt-5 rounded shadow">
    <div class="row align-items-stretch">
        <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded">

        </div>

        <!-- Icono -->
        <div class="col bg-white p-5 rounded-end">
            <div class="text-center">
                <img src="https://cdn.discordapp.com/attachments/1101400363459944491/1101528205875216446/icopage.png" width="95" alt="">
            </div>

            <h2 class="fw-bold text-center py-5 ltm">¡Bienvenido a AniComics!</h2>

        <!-- Log-In -->
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label lts">Correo Electrónico</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label lts">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesión</button>
                </div>
                <p>  

                </p>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Es momento de registrarse ;D</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo para confirmación!</a>
                    </p>
                </div>
            </form>

        <!-- Redes Sociales -->    
            <div class="container w-100 my-5">
                <div class="row text-center">
                    <div class="col-12">Iniciar Sesión</div>
                </div>
                <div class="row">
                    <div class="col">
                        <button class="btn btn-outline-primary w-100 my-1">
                            <div class="row align-items-center">
                                <div class="col-2 d-none d-md-block">
                                    <img src="https://cdn.discordapp.com/attachments/1101400363459944491/1101561520829243493/facebook_icon.png" width="32" alt="">
                                </div>

                                <div class="col-12 col-md-10 text-center">
                                    Facebook
                                </div>
                            </div>
                        </button>
                    </div>
                    <div class="col">
                        <button class="btn btn-outline-danger w-100 my-1">
                            <div class="row align-items-center">
                                <div class="col-2 d-none d-md-block">
                                    <img src="https://cdn.discordapp.com/attachments/1101400363459944491/1101562630361071687/google_icon.png" width="32" alt="">
                                </div>

                                <div class="col-12 col-md-10 text-center">
                                    Google
                                </div>
                            </div>
                        </button>
                    </div>
                    <div class="col">
                        <button class="btn btn-outline-dark w-100 my-1">
                            <div class="row align-items-center">
                                <div class="col-2 d-none d-md-block">
                                    <img src="https://cdn.discordapp.com/attachments/1101400363459944491/1101563196357214288/apple_icon.png" width="32" alt="">
                                </div>

                                <div class="col-12 col-md-10 text-center">
                                    Apple
                                </div>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
            <p>© 2023 AniWeb. Todos los derechos reservados.</p>
        </section>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
