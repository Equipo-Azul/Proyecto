@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form asp-controller="Proforma" asp-action="Index">
                <a href="Proforma"><img src="/image/carrito.png" class="imagen-enviar" alt="Carrito de compras"></a>
        </form>
    </li>
    <li class="nav-item">
        <a  class="nav-link tfc" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">¡Bienvenido @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link tfc"><img src="https://cdn.discordapp.com/attachments/1101400363459944491/1102829530642665502/logout.png" alt="" width="30px"></button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link tfc" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link tfc" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
