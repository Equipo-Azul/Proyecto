@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/index.css">
<section class="welcome-section">
  <div class="welcome-text">
    <h2>Bienvenido a mi AniWeb Comics</h2>
    <p>Explora todo lo que tenemos para ofrecer</p>
  </div>
  <div class="logo">
    <img src="/image/Imagen1.png" alt="Logo">
  </div>
</section>

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/image/komi.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/image/acall.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/image/dub.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<p></p>

<section class="cta">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <img src="https://i.pinimg.com/originals/38/be/2a/38be2aa9b34c98e9db285e398bdd21eb.gif" alt="GIF de anime" class="img-fluid">
      </div>
      <div class="col-md-6">
        <h2>¿Quieres ver más?</h2>
        <p>Explora nuestro catálogo de manga y comics completo y descubre nuevas incorporaciones.</p>
        <a href="Catalogo" class="btn btn-primary">Ver catálogo</a>
      </div>
    </div>
  </div>
</section>




